                    </LinearLayout>

                    <TextView
                        android:id="@+id/libfour_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/libfour_titles"
                        android:layout_below="@id/libfour_titles"
