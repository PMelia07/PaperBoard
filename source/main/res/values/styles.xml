<resources>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- If you want to theme the drawer, copy this to the style above and add your own resources

    <item name="material_drawer_window_background">@color/drawer</item>
    <item name="material_drawer_background">@color/drawer</item>
    <item name="material_drawer_icons">@color/text</item>
    <item name="material_drawer_primary_text">@color/text</item>
    <item name="material_drawer_secondary_text">@color/textt</item>
    <item name="material_drawer_hint_text">@color/textt</item>
    <item name="material_drawer_divider">@color/divider</item>
    <item name="material_drawer_selected">@color/drawerr</item>
    <item name="material_drawer_selected_text">@color/primary</item>
    <item name="material_drawer_header_selection_text">@color/text</item>

    -->

    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="FabLabels">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
